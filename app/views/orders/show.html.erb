<section class="hero is-fullweight is-light is-bold">
  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="column is-half is-offset-one-quarter">
        <h1 class="title">
        Flight summary
        </h1>
        <h2 class="subtitle">
          <%= @order.flight.start_datetime.strftime('%d %B %Y')%>
        </h2>
        <table class="table is-fullwidth">
          <thead>
            <tr>
              <th>Departure</th>
              <th>Arrival</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td> <%= @order.flight.departure_airport.name %> <%= @order.flight.start_datetime.strftime('%H:%M') %></td>
              <td> <%= @order.flight.arrival_airport.name %> <%= (@order.flight.start_datetime + (@order.flight.flight_duration/60).to_i.hours).strftime('%H:%M') %> </td>
            </tr>
          </tbody>
        </table>
        <h1 class="title">
           Passenger details
        </h1>
        <table class="table is-fullwidth has-text-left">
          <thead>
            <tr>
              <th>Passenger's name</th>
              <th>Passenger's email</th>
            </tr>
          </thead>
          <tbody>
          <% @order.passengers.each do | passenger | %>
          <tr>
             <td> <%= passenger.full_name %></td>
             <td> <%= passenger.email %></td>
          </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
